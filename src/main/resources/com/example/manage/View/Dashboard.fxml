<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.manage.Controller.DashboardController"
            prefHeight="400.0" prefWidth="600.0"
            stylesheets="@../CSS/Dashboard.css">
    <!-- Top section -->


    <!-- Center section -->
    <center>
        <VBox spacing="10" alignment="CENTER" >
            <Label fx:id="dashboard" text="%dashboard.title" >

            </Label>
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Button fx:id="Project" text="%dashboard.project" onAction="#Project" mnemonicParsing="false" prefHeight="39.0" prefWidth="140.0">
                <font>
                    <Font name="System Bold" size="18.0" />
                </font>

            </Button>

            <Button fx:id="Department" text="%dashboard.department" onAction="#Department" mnemonicParsing="false" prefHeight="37.0" prefWidth="140.0">
                <font>
                    <Font name="System Bold" size="16.0" />
                </font>

            </Button>
            <Button fx:id="employee" text="%dashboard.employee" onAction="#Employee" mnemonicParsing="false" prefHeight="37.0" prefWidth="140.0">
                <font>
                    <Font name="System Bold" size="16.0" />
                </font>

            </Button>
        </VBox>
    </center>
</BorderPane>
