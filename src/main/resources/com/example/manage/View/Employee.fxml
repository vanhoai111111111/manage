<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.ComboBox?>
<BorderPane  xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.manage.Controller.EmployeeController">

    <center>
        <TextField fx:id="searchField"  />
        <Button layoutX="220" layoutY="14"  text="Tìm kiếm" />
        <TableView fx:id="employeeTable" prefHeight="400.0" prefWidth="622.0">
            <columns>
                <TableColumn fx:id="EmployeeIDCol" prefWidth="100" text="stt" />
                <TableColumn fx:id="EmployeeNameCol" prefWidth="150" text="TEN" />
                <TableColumn fx:id="projectNameCol" prefWidth="150" text="TNE DỰ ÁN" />
                <TableColumn fx:id="phoneCol" prefWidth="150" text="PHONE"/>
            </columns>
        </TableView>
    </center>

    <!-- Phần dưới chứa các Label, TextField và Button -->
    <bottom>
        <VBox spacing="10">
            <HBox spacing="10">
                <Label text="Mã nhân viên:" />
                <TextField fx:id="employeeIDTextField" prefWidth="622.0" />
            </HBox>
            <HBox spacing="10">
                <Label text="Tên nhân viên:" />
                <TextField fx:id="employeeNameTextField" prefWidth="622.0" />
            </HBox>
            <HBox spacing="10">
                <Label text="Số điện thoại:" />
                <TextField fx:id="phoneTextField" prefWidth="622.0" />
            </HBox>
            <HBox spacing="10">
                <Label text="Tên dự án:" />
                <ComboBox fx:id="projectComboBox" prefWidth="622.0" />
            </HBox>
            <HBox spacing="10">
                <Button mnemonicParsing="false" onAction="#addEmployee" text="Thêm" />
                <Button mnemonicParsing="false" onAction="#btndeleteEmployee" text="Xóa" />
                <Button mnemonicParsing="false" onAction="#updateemployee" text="Sửa thông tin" />
                <Button mnemonicParsing="false" text="Xem chi tiết" />
            </HBox>
        </VBox>
    </bottom>
</BorderPane>
